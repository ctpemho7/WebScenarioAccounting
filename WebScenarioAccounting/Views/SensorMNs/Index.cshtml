@model IEnumerable<WebScenarioAccounting.SensorMN>

@{
    ViewBag.Title = "Датчики";
}

<h2>Датчики</h2>

<input class="btn btn-primary" type="button" value="Создать" onclick="location.href='@Url.Action("Create", "SensorMNs")'" />
<p></p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClassifierSensor.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Room.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClassifierSensor.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Room.Name)
            </td>
            <td>
                @Html.ActionLink("Изменить", "Edit", new { id = item.id }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.id }) |
                @Html.ActionLink("Ещё..", "Details", new { id = item.id })
            </td>
        </tr>
    }

</table>
